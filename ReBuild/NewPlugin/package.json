{
  "name": "archicad-plugin-test",
  "version": "1.0.0",
  "description": "JavaScript tests for ArchiCAD plugin",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": ["archicad", "plugin", "testing"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["./__tests__/setup.js"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "__tests__/mock-acapi.js",
      "__tests__/setup.js"
    ],
    "collectCoverageFrom": [
      "RFIX/**/*.js",
      "!RFIX/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov"]
  }
}